[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    venv,
    .venv,
    staticfiles,
    media

ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator

per-file-ignores =
    __init__.py:F401
    settings.py:E501

[pycodestyle]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    venv,
    .venv
